<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bacground_blue_gradient"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="18dp"
    android:weightSum="2"
    tools:context=".home"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:orientation="horizontal">



        //Course CardView
        <android.support.v7.widget.CardView
            android:id="@+id/cardview_courseId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"

                >

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/cardview_bacground_course"
                    android:padding="10dp"
                    android:src="@drawable/course_icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/course_color_home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/Course"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:textStyle="normal"
                    android:textSize="30sp"

                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        //Article cardview

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_ArticalId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/cardview_background_profile"
                    android:padding="10dp"
                    android:src="@drawable/vector_asset_article" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/profile_color_home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/Article"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:textStyle="normal"
                    android:textSize="30sp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>



        //Share CardView
        <android.support.v7.widget.CardView
            android:id="@+id/cardview_admin_panel_Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/cardview_background_share"
                    android:padding="10dp"
                    android:src="@drawable/vector_asset_adminpanel_image_icon_24dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/share_color_home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/Admin_Panel"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:textStyle="normal"
                    android:textSize="30sp"

                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:orientation="horizontal">


        //feedback cardview

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_feedbackId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/cardview_background_feedback"
                    android:padding="10dp"
                    android:src="@drawable/feedback_icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/feedback_color_home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/Feedback"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:textStyle="normal"
                    android:textSize="30sp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        //aboutus CardView
        <android.support.v7.widget.CardView
            android:id="@+id/cardview_aboutusId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/cardview_background_aboutus"
                    android:padding="10dp"
                    android:src="@drawable/aboutus_icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/aboutus_color_home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/Aboutus"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:textStyle="normal"
                    android:textSize="30sp"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        //Log out cardview

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_logoutId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/cardview_background_logout"
                    android:padding="10dp"
                    android:src="@drawable/logout_icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/logout_color_home" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/Logout"
                    android:textAppearance="?android:textAppearanceListItemSmall"
                    android:textStyle="normal"
                    android:textSize="30sp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>