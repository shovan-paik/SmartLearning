<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".feedback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_nameID"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:ems="10"
                android:gravity="top|start"
                android:hint="Name"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="#000"
                android:textColorHint="#494747" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#d13c4d" />


            <EditText
                android:id="@+id/et_commentID"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:ems="10"
                android:gravity="top|start"
                android:hint="Message, Comment, Advice etc."
                android:inputType="textMultiLine"
                android:minLines="7"
                android:padding="8dp"
                android:textColor="#000"
                android:textColorHint="#494747" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#d13c4d" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/button_sendID"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/register_button_background_blue"
                    android:clickable="true"
                    android:padding="16dp"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/button_resetID"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/register_button_background_blue"
                    android:clickable="true"
                    android:padding="16dp"
                    android:text="Reset"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>