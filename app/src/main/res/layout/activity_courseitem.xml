                       />

                   <TextView
                       android:textAppearance="?android:textAppearanceListItemSmall"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginTop="5dp"
                       android:text="Compiler Design"
                       android:textStyle="normal"
                       android:gravity="center_horizontal"
                       />
               </LinearLayout>
           </android.support.v7.widget.CardView>
       </LinearLayout>






       //third Linear layout
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:clipToPadding="false"
           android:layout_gravity="center"
           >
           //Software Engineering CardView
           <android.support.v7.widget.CardView
               android:id="@+id/cardview_softwareengineeringId"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="200dp"
               android:clickable="true"
               android:layout_margin="10dp"
               android:foreground="?android:attr/selectableItemBackground"

               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:orientation="vertical"

                   >
                   <ImageView

                       android:layout_width="match_parent"
                       android:layout_height="150dp"
                       android:src="@drawable/softwareengineering"
                       android:padding="10dp"

                       />

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:layout_margin="0dp"
                       android:background="@color/share_color_home"
                       />

                   <TextView
                       android:textAppearance="?android:textAppearanceListItemSmall"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="Software Engineering"
                       android:textStyle="normal"
                       android:gravity="center_horizontal"
                       android:layout_marginTop="5dp"

                       />

               </LinearLayout>


           </android.support.v7.widget.CardView>

           //Data Communication cardview
           <android.support.v7.widget.CardView
               android:id="@+id/cardview_datacommunicationId"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="200dp"
               android:clickable="true"
               android:layout_margin="10dp"
               android:foreground="?android:attr/selectableItemBackground"

               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:orientation="vertical"
                   >
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="150dp"
                       android:src="@drawable/datacommunication"
                       android:padding="10dp"

                       />

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:layout_margin="0dp"
                       android:background="@color/share_color_home"
                       />

                   <TextView
                       android:textAppearance="?android:textAppearanceListItemSmall"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginTop="5dp"
                       android:text="Data Communication"
                       android:textStyle="normal"
                       android:gravity="center_horizontal"
                       />
               </LinearLayout>
           </android.support.v7.widget.CardView>
       </LinearLayout>





   </LinearLayout>
</ScrollView>
</LinearLayout>